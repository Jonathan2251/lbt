Work on llvm f28c006a5895fc0e329fe15fead81e37457cb1d1 of 14.x

install:
  ~/git/lbt/exlbt/clang-tools$ cp -rf loop-convert2 ~/llvm/14.x/llvm-project/clang-tools-extra/.
  echo 'add_subdirectory(loop-convert2)' >> ~/llvm/14.x/llvm-project/clang-tools-extra/CMakeLists.txt

build:
  ~/llvm/14.x/llvm-project/build$ ninja
run:
  ~/git/lbt/exlbt/clang-tools$ ~/llvm/14.x/llvm-project/build/bin/loop-convert2 loop-test.cpp --
